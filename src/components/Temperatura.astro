---
const currentTemperature = 25; // Puedes ajustar este valor para probar diferentes temperaturas
const currentHumidity = 60; // Puedes ajustar este valor para probar diferentes niveles de humedad
import LandingHeader4 from "../components/LandingHeader4.astro";
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperatura y Humedad</title>
    <style>
        /* Estilos generales */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            font-family: Arial, sans-serif;
            background: #3e858e; /* Color de fondo */
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column; /* Para alinear el título y los termómetros verticalmente */
        }

        .main-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px; /* Espacio entre los termómetros y las etiquetas */
        }

        .thermometer-container {
            display: flex;
            align-items: center;
            gap: 40px; /* Espacio entre los termómetros */
        }

        .thermometer {
            width: 80px;
            height: 300px;
            background: linear-gradient(to top, #ffebee, #f44336);
            border-radius: 40px;
            border: 8px solid #f44336;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .thermometer-bulb {
            width: 100px;
            height: 100px;
            background: #f44336;
            border-radius: 50%;
            position: absolute;
            bottom: -50px;
            left: 50%;
            transform: translateX(-50%);
            border: 8px solid #f44336;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .thermometer-fill {
            width: 100%;
            background: #ffffff;
            position: absolute;
            bottom: 0;
            left: 0;
            border-radius: 0 0 40px 40px;
        }

        .thermometer-label {
            margin-top: 20px;
            font-size: 1.5rem;
            color: #333;
            font-weight: bold;
            text-align: center;
        }

        .thermometer-image {
            width: 80px;
            height: 300px;
            background: url('https://example.com/your-thermometer-image.png') no-repeat center center;
            background-size: contain;
        }

        .title {
            font-size: 3rem; /* Tamaño más grande del título */
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <LandingHeader4 />
    <main class="main-container">
        <div class="title">Datos en Tiempo Real</div>
        <div class="thermometer-container">
            <div class="thermometer">
                <div class="thermometer-fill" style={`height: ${Math.min(currentTemperature, 100)}%;`}></div>
                <div class="thermometer-bulb"></div>
            </div>
            <div class="thermometer-image"></div>
            <div class="thermometer" style="background: linear-gradient(to top, #e0f7fa, #00bcd4); border: 8px solid #00bcd4;">
                <div class="thermometer-fill" style={`height: ${Math.min(currentHumidity, 100)}%; background: #ffffff;`}></div>
                <div class="thermometer-bulb" style="background: #00bcd4; border: 8px solid #00bcd4;"></div>
            </div>
        </div>
        <div class="thermometer-container">
            <div class="thermometer-label">
                Temperatura actual: {currentTemperature}°C
            </div>
            <div class="thermometer-label">
                Humedad actual: {currentHumidity}%
            </div>
        </div>
    </main>
</body>
</html>

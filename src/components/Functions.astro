---
import Section from "./Section.astro"
---

<Section
  title="Funciones"
  subtitle="Funciones Incorporadas en la Compra de tu Kit Intelli-Fridge"
  color="white"
  id="functions"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
      href="/Functionwrapper"
    >
      Explorar Funciones</a
    >
   
  </div>

  <img
    slot="background"
    alt="Funciones"
    class="h-full w-full object-cover object-center"
    src="model-3.avif"
    id="bg-image-model3"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-model3"
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "func.webp"
  } else {
    imageElement.src = "func.webp"
  }
</script>

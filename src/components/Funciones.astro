---
import techImage from '../images/tech.jpg'; // Ajusta la ruta según sea necesario
import LandingHeader5 from "../components/LandingHeader5.astro";
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Proyecto</title>
    <style>
        /* Estilo global para el fondo */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }

        .background-container {
            position: relative;
            min-height: 100vh; /* Asegúrate de que cubra toda la pantalla */
            background-image: url('../images/tech.jpg'); /* Ajusta la ruta según sea necesario */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        /* Estilos de la sección de tecnologías */
        .technologies-section {
            color: white;
            padding: 4rem 1rem;
        }

        .technologies-content {
            position: relative;
            text-align: center;
            z-index: 1;
        }

        .technologies-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: black;
        }

        .technologies-subtitle {
            font-size: 1.125rem;
            margin-bottom: 2rem;
        }

        .technologies-cards {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1.5rem;
        }

        .technologies-card {
            background-color: white;
            color: black;
            border: 1px solid #ccc;
            border-radius: 0.5rem;
            padding: 1.5rem;
            width: 250px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .technologies-card:hover {
            transform: scale(1.05);
        }

        .technologies-card-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
            margin-bottom: 1rem;
        }

        .technologies-card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .technologies-card-description {
            color: #333;
            margin-bottom: 1rem;
        }

        /* Estilos de la sección de componentes en una cuadrícula 3x3 */
        .components-section {
            padding: 4rem 1rem;
        }

        .components-cards {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
        }

        .components-card {
            background-color: white;
            color: black;
            border: 1px solid #ccc;
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .components-card:hover {
            transform: scale(1.05);
        }

        .components-card-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
            margin-bottom: 1rem;
        }

        .components-card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .components-card-description {
            color: #333;
            margin-bottom: 1rem;
        }
    </style>
</head>
